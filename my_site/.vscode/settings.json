{
    "python.pythonPath": "/path/to/your/virtualenv/bin/python",
    "window.zoomLevel": 0,
    "python.languageServer": "Pylance",
    "files.associations": {
      "*.html": "html",
      "*.js": "javascript",
      "*.css": "css",
      "**/*.html": "django-html",
      "**/templates/**/*.html": "django-html",
      "**/requirements{/**,*}.txt": "pip-requirements"
    },
    "emmet.includeLanguages": {
      "django-html": "html"
    }

  }